<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.metrostate.edu.booknow.controllers.CreateAccountController">
    <children>
        <HBox prefHeight="600.0" prefWidth="1200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Text fill="#1877f2" text="BookNow">
                            <font>
                                <Font name="System Bold" size="96.0" />
                            </font>
                        </Text>
                        <Text strokeWidth="0.0" text="Create an account to reserve tables at the best restaurants.">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Text>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: white; -fx-padding: 30; -fx-spacing: 10;" HBox.hgrow="ALWAYS">
                    <children>
                        <TextField fx:id="tf_Username" prefHeight="35.0" prefWidth="350.0" promptText="Username" />
                        <PasswordField fx:id="pf_Password" prefHeight="35.0" prefWidth="350.0" promptText="Password" />
                        <PasswordField fx:id="pf_ConfirmPassword" prefHeight="35.0" prefWidth="350.0" promptText="Confirm Password" />
                        <Button onAction="#onCreateAccountButtonAction" prefHeight="35.0" prefWidth="350.0" text="Create New Account" />
                        <Text text="Already have an account?" />
                        <Button onAction="#onButton_Login" prefHeight="35.0" prefWidth="350.0" text="Log in" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
